   "source": [
    "def find_max(arr, n):\n",
    "    if n == 1:\n",
    "        return arr[0]\n",
    "    else:\n",
    "        max_rest = find_max(arr[1:], n - 1)\n",
    "        return max(arr[0], max_rest)\n",
    "\n",
    "\n",
    "array = [10, 7, 23, 4, 18]\n",
    "max_element = find_max(array, len(array))\n",
    "print(max_element)\n"
   ]
  },
